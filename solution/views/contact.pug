extends ./layouts/main

block content
    if (captcha)
      form(method="POST", action="/captcha")
          p !{captcha}
          div.col-md4.text-center
            button.btn-lg.btn-success(type='submit') I am not a bot!
    else
      if (error)
          div(style="color:red") Error : #{error}
      else
          form(action="/contact-us", method="post")
            .form-group
              label(for='exampleFormControlInput1') Name
              input#exampleFormControlInput1.form-control(type='text', placeholder='Deckard Cain', name="name")
            .form-group
              label(for='exampleFormControlInput1') Email address
              input#exampleFormControlInput1.form-control(type='email', placeholder='name@example.com', name="email")
            .form-group
              label(for='exampleFormControlTextarea1') What can we help with?
              textarea#exampleFormControlTextarea1.form-control(rows='3', name="desc")
            button.btn.btn-primary(type='submit') Submit

    script.
        function cb(token){
            console.log('token', token);
            var input = document.createElement('input');
            input.setAttribute('type', 'hidden');
            input.setAttribute('name', 'g-recaptcha-response');
            input.setAttribute('value', token);
            document.getElementsByTagName('form')[0].appendChild(input);
        }