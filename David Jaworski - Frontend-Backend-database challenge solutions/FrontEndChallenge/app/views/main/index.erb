          <form id= "contactForm" method="post" id=contactForm class= "ui form">
            <h2 class="contact">Contact Us!</h2>
            <br>
            <div class= "field textInput">
              <label>Name</label>
              <input type="text" id="nameInput" placeholder="Name" />
            </div>
            <div class= "field textInput">
              <label>Email</label>
              <input type="text" id="emailInput" placeholder="Email" />
            </div>
            <div class= "field textInput">
              <label>Company</label>
              <input type="text" id="companyInput" placeholder="Company" />
            </div>
            <div class= "field textInput">
              <label>Message</label>
                <textarea
                  type="text"
                  id="messageInput"
                  placeholder="message"
                  rows="2"
              ></textarea>
            </div>
            <div class="g-recaptcha" data-sitekey="6Lccy-IUAAAAAAhEwK9F6wbfF3kLGqrLZ0sPvpy7" data-callback="verifyCaptcha"></div>
            <div id="g-recaptcha-error"></div>
            <div>
              <input class= "ui yellow button" type="submit" name="submit" value="Submit" />
            </div>
          </form>
          <br>
        </div>
