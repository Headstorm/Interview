      <script src='https://www.google.com/recaptcha/api.js'></script>
      <script>
      function submitUserForm() {
        let response = grecaptcha.getResponse();
        let contactName = document.getElementById("nameInput");
        let contactEmail = document.getElementById("emailInput");
        let contactCompany = document.getElementById("companyInput");
        let contactMessage = document.getElementById("messageInput");

        if(response.length == 0) {
            document.getElementById('g-recaptcha-error').innerHTML = '<span style="color:red;">This field is required.</span>';
            return false;
        }
          console.log("token:",response)
          console.log("name:", contactName.value, " ", "email:", contactEmail.value, " ", "company:", contactCompany.value, " ", "message:", "", contactMessage.value)
          return true;
        };
      function verifyCaptcha() {
        document.getElementById('g-recaptcha-error').innerHTML = '';
      }
     
      contactForm.addEventListener("submit", e => {
        let contactForm = document.getElementById("contactForm");
        e.preventDefault();
        submitUserForm();
        contactForm.reset();
      })
      </script>
